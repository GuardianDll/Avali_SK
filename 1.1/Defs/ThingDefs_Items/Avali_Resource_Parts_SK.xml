<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- Railgun Component -->
	<ThingDef ParentName="CropsBase">
		<defName>Railgun_Component</defName>
		<label>Railgun weapon component</label>
		<description>Main components for rail weapons.</description>
		<graphicData>
			<texPath>Things/Items/Weapons/railgun_component</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Metal_Drop</soundInteract>
		<soundDrop>Metal_Drop</soundDrop>
		<statBases>
			<MarketValue>1560</MarketValue>
			<DeteriorationRate>0</DeteriorationRate>
			<Flammability>1</Flammability>
			<SellPriceFactor>0.5</SellPriceFactor>
			<Mass>3</Mass>
			<Bulk>2</Bulk>
		</statBases>
		<useHitPoints>true</useHitPoints>
		<thingCategories>
			<li>WeaponParts</li>
		</thingCategories>
		<stuffProps>
			<categories>
				<li>Matty</li>
			</categories>
		</stuffProps>
		<stackLimit>25</stackLimit>
	</ThingDef>
	
	<!-- Power module basic --> 
	<ThingDef ParentName="CropsBase">
		<defName>Power_basic</defName>
		<label>Basic avali power module</label>
		<description>The main source of energy for Avali's weapons and armor.</description>
		<graphicData>
			<texPath>Things/Items/Resource/power_basic</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Metal_Drop</soundInteract>
		<soundDrop>Metal_Drop</soundDrop>
		<statBases>
			<MarketValue>450</MarketValue>
			<DeteriorationRate>1</DeteriorationRate>
			<Flammability>0.7</Flammability>
			<SellPriceFactor>0.5</SellPriceFactor>
			<Mass>0.4</Mass>
			<Bulk>3</Bulk>
		</statBases>
		<useHitPoints>true</useHitPoints>
		<thingCategories>
			<li>Electronics</li>
		</thingCategories>
		<stuffProps>
			<categories>
				<li>Matty</li>
			</categories>
		</stuffProps>
		<stackLimit>25</stackLimit>
	</ThingDef>
</Defs>